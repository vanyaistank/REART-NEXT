{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@Styled": ["lib/styled/index.ts"],
      "@Styled/*": ["lib/styled/*"],
      "@Redux/*": ["lib/redux/*"],
      "@GraphQL/*": ["lib/graphql/*"],
      "@Components": ["components/index.ts"],
      "@Containers": ["containers/index.ts"],
      "@Helpers/*": ["helpers/*"],
      "@API/*" : ["api/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true
  }
}